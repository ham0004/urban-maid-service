# Server environment variables - copy to .env and fill values for local development
# Example: cp .env.example .env

# Server
PORT=5000
NODE_ENV=development

# Database (use local MongoDB or Atlas connection string)
MONGODB_URI=mongodb://localhost:27017/urban_maid

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# SendGrid (optional - email features)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=you@example.com

# Client URL
CLIENT_URL=http://localhost:3000

# Stripe (optional)
STRIPE_SECRET_KEY=

# Firebase / FCM (optional)
FIREBASE_SERVER_KEY=

# Google Maps API (optional - used if location features used)
GOOGLE_MAPS_API_KEY=

# Google Gemini / AI analytics (optional)
GEMINI_API_KEY=
